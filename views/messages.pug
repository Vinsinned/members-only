extends layout

block content
  h1= title

  ul
  each message in message_list
    li 
      if locals.user
        if user.memberStatus === true
          h2= message.name
        else  
          h2 Anonymous
      else 
        h2 Anonymous
      h3= message.title
      p= message.text
      if locals.user
        if user.memberStatus === true
          p= message.date
      h4 
        a(href=message.url + '/delete') Delete
    hr

  else
    li There are no messages.