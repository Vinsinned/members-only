extends layout

block content

  h1 #{title}
          
  form(method='POST' action='')
    div.form-group
      label(for='code') Enter Secret Code:
      input#code.form-control(type='text', placeholder='Enter a Code' name='code' required='true' value=(undefined===secret ? '' : secret) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
  if errorOne 
      ul
      li= errorOne